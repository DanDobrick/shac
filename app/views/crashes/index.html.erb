<p id="notice"><%= notice %></p>

<h1>Listing Crashes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Item for exchange</th>
      <th>Host</th>
      <th>Crasher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crashes.each do |crash| %>
      <tr>
        <td><%= crash.date %></td>
        <td><%= crash.item_for_exchange %></td>
        <td><%= crash.host_id %></td>
        <td><%= crash.crasher_id %></td>
        <td><%= link_to 'Show', crash %></td>
        <td><%= link_to 'Edit', edit_crash_path(crash) %></td>
        <td><%= link_to 'Destroy', crash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

