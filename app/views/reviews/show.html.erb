<p id="notice"><%= notice %></p>

<p>
  <strong>Crash Date:</strong>
  <%= @review.crash.date.strftime('%x') %>
</p>

<p>
  <strong>Crasher Name:</strong>
  <%= @review.crash.crasher.full_name %>
</p>

<p>
  <strong>Review text:</strong>
  <%= @review.review_text %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @review.rating %>
</p>

